    "version": "0.2.0",
    "configurations": [
        {
            "name": "Embox Debug",
            "cwd": "${workspaceRoot}",
            "executable": "./build/base/bin/embox",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "openocd",
            "interface": "swd",
            "device": "stm32f1x",
            "svdFile": "/home/artem/workspace/STM32F1_svd_V1.2/STM32F103.svd",
            "configFiles": [
                "interface/stlink.cfg",
                "target/stm32f1x.cfg"
            ],
            "preRestartCommands": [
                "load embox",
                "enable breakpoint",
                "monitor reset init"
            ] 
