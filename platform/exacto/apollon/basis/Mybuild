package platform.exacto.apollon.basis

@Build(stage=1)
static module apollon_conf extends third_party.bsp.stmf1cube.stm32f1_conf {
	@IncludeExport(path="")
	source "stm32f1xx_hal_conf.h"
}

@BuildDepends(third_party.bsp.stmf1cube.cube)
module arch extends embox.arch.arch {
	source "arch_generated.c"

	source "system_stm32f1xx.c"
	depends third_party.bsp.stmf1cube.cube
}
@Build(stage=1)
@BuildDepends(apollon_conf)
@BuildDepends(third_party.bsp.stmf1cube.cube)
@BuildArtifactPath(cppflags="$(addprefix -I$(EXTERNAL_BUILD_DIR)/third_party/bsp/stmf1cube/cube/STM32CubeF1-1.8.1/, Drivers/BSP/STM32VL-Discovery)")
static module bsp extends third_party.bsp.st_bsp_api {

	@NoRuntime depends third_party.bsp.stmf1cube.cube
	@NoRuntime depends apollon_conf
	@NoRuntime depends arch
}
